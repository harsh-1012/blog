<%- include("partials/header"); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label>Tile</label>
        <input class="form-control" type="text" name="postTitle" autocomplete="off">
    </div>
    <div class="form-group">
        <label>Post</label>
        <textarea class="form-control" name="postBody" cols="30" rows="5" autocomplete="off"></textarea>
    </div>
    <button type="submit" class="btn searchButton btn-outline-info composebtn">Publish</button>
</form>

<%- include("partials/footer"); -%>